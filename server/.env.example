# Server
NODE_ENV=development
PORT=5000

# MongoDB (use MongoDB Atlas connection string for production)
MONGODB_URI=mongodb://localhost:27017/music-room

# JWT (generate a strong secret for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# File upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads/audio

# CORS (comma-separated origins for production)
CORS_ORIGIN=http://localhost:3000

# Admin (optional - enable admin dashboard)
ADMIN_ENABLED=true
